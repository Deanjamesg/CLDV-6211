@{
    ViewData["Title"] = "Home";
}

<div class="container container-title">
    <div class="text-center">
        <h1 class="display-4" style="font-size: 5rem;">KhumaloCraft Emporium</h1>
        <p class="lead">Explore our collection of handcrafted products from artisans worldwide.</p>
    </div>
    <hr>
    <div class="row row-custom">
        <div class="col-md-4">
            <h2>About Us</h2>
            <p>Learn more about KhumaloCraft Emporium and our mission to connect artisans with a global audience.</p>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="AboutUs">Read More</a>
        </div>
        <div class="col-md-4">
            <h2>Contact Us</h2>
            <p>Get in touch with us for any inquiries or assistance regarding our products and services.</p>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
        </div>
        <div class="col-md-4">
            <h2>My Work</h2>
            <p>Explore our collection of handcrafted products, including necklaces, carvings, and tapestries.</p>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="MyWork">View Collection</a>
        </div>
        <div class="col-md-4">
            <h1>Valorant Tracker</h1>
            <a class="btn btn-dark" href="https://tracker.gg/valorant/profile/riot/Zamalek%23exe/overview">Tracker</a>

        </div>
    </div>
</div>

