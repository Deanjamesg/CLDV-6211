@{
    ViewData["Title"] = "My Work";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">My Work</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://www.fiongmma.com/cdn/shop/products/Aniema-AfricanTurquoise.jpg?v=1691434335" class="card-img" alt="Craftwork 1">
                    </div>
                    <div class="col-md-8">
