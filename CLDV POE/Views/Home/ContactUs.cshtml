@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="contact-us">
        <h2>Contact Us</h2>
        <p>Please complete this form so our support team can help you.</p>
        <p>All returns and cancelling of orders must be requested using the contact form.</p>
        <p>For urgent queries, please <a href="khumalocraft@emporium.com">email us</a> or call us at <a href="tel:+27926729182">+27 92 672 9182</a>.</p>

        <div class="form-box">

            <form action="#">
                <div class="input-row">
                    <div class="input-box">
                        <input type="text" required />
                        <label>Name</label>
                    </div>

                    <div class="input-box">
                        <input type="email" required />
                        <label>Email</label>
                    </div>
                </div>
                <div class="input-box">
                    <input type="text" required />
                    <label>Your Request:</label>
                </div>

                <button type="submit" class="btn">Submit</button>
            </form>

        </div>
    </div>
</div>




